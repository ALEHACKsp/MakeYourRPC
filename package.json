{
  "name": "MakeYourRPC",
  "version": "1.1.1",
  "description": "Create your Rich Presence on Discord in an easy and practical way.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "build"
  },
  "repository": "git@github.com:SrSheep/MakeYourRPC.git",
  "keywords": [
    "Electron",
    "Discord",
    "RPC"
  ],
  "author": "√Ålvaro Filho",
  "license": "MIT",
  "dependencies": {
    "discord-rpc": "./RPC",
    "electron-settings": "^3.2.0",
    "jquery": "^3.3.1",
    "jsdom": "^11.10.0"
  },
  "devDependencies": {
    "electron": "^2.0.0",
    "electron-builder": "^20.13.3"
  },
  "build": {
    "appId": "com.makeyourrpc",
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "icon": "/src/img/512x512.png"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "snap",
        "pacman",
        "rpm"
      ]
    }
  }
}
